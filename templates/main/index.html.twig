    </script>
<script>
// script.js
$(document).ready(function() {
    $('.product').each(function() {
        var rating = $(this).data('rating');
        var stars = $(this).find('.star');
        stars.each(function(index) {
            if (index < rating) {
                $(this).addClass('selected');
            }
        });
        $(this).find('.rating-value span').text(rating);
    });
});
</script>
