{% extends 'base.html.twig' %}

{% block title %}Navbar{% endblock %}
{% block body %}
		<header class="header-v2">
		<!-- Header desktop -->
		<div class="container-menu-desktop trans-03">
			<div class="wrap-menu-desktop">
				<nav class="limiter-menu-desktop p-l-45">
					
					<!-- Logo desktop -->		
					<a href="{{path('main')}}" class="logo">
						<img src="{{asset('images/book-heaven5.png')}}" alt="IMG-LOGO">
					</a>
					
					<!-- Menu desktop -->
					<div class="menu-desktop">
						<ul class="main-menu">
							<li class="active-menu">
								<a href="{{path('main')}}">Home</a>
							</li>
							<li>
								<a href="{{path('about')}}">About</a>
							</li>
							<li>
								<a href="{{path('books')}}">Books</a>
							</li>
							<li>
								<a href="{{path('contact')}}">Contact</a>
							</li>
						</ul>
					</div>	

					<!-- Icon header -->
					<div class="wrap-icon-header flex-w flex-r-m h-full">							
						<div class="flex-c-m h-full p-l-18 p-r-25 bor5">
                    {% if app.session.get('panier') is not empty %}
								{% set panierCount = app.session.get('panier')|length %}
					{% else %}
					{% set panierCount =  0 %}
					{% endif %}
						<a href="{{path('app_card')}}">
							<div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 icon-header-noti" data-notify="{{ panierCount }}">
								<i class="zmdi zmdi-shopping-cart"></i>
							</div>
						</a>
						</div>
							
						<div class="flex-c-m h-full p-lr-19">
							<div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 js-show-sidebar">
								<i class="zmdi zmdi-menu"></i>
							</div>
						</div>
					</div>
				</nav>
			</div>	
		</div>

		<!-- Header Mobile -->
		<div class="wrap-header-mobile">
			<!-- Logo moblie -->		
			<div class="logo-mobile">
				<a href="{{path('main')}}"><img src="{{asset('images/book-heaven2.png')}}" alt="IMG-LOGO"></a>
			</div>

			<!-- Icon header -->
			<div class="wrap-icon-header flex-w flex-r-m h-full m-r-15">
				<div class="flex-c-m h-full p-r-10">
					<div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 js-show-modal-search">
						<i class="zmdi zmdi-search"></i>
					</div>
				</div>

				<div class="flex-c-m h-full p-lr-10 bor5">
					<div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 icon-header-noti js-show-cart" data-notify="{{ panierCount }}">
						<i class="zmdi zmdi-shopping-cart"></i>
					</div>
				</div>
			</div>

			<!-- Button show menu -->
			<div class="btn-show-menu-mobile hamburger hamburger--squeeze">
				<span class="hamburger-box">
					<span class="hamburger-inner"></span>
				</span>
			</div>
		</div>


		<!-- Menu Mobile -->
		<div class="menu-mobile">
			<ul class="main-menu-m">
				<li>
					<a href="{{path('main')}}">Home</a>
					<span class="arrow-main-menu-m">
						<i class="fa fa-angle-right" aria-hidden="true"></i>
					</span>
				</li>
				<li>
					<a href="{{path('about')}}">About</a>
				</li>
				<li>
					<a href="{{path('books')}}">books</a>
				</li>


				<li>
					<a href="{{path('contact')}}">Contact</a>
				</li>
			</ul>
		</div>

		<!-- Modal Search -->
		<div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
			<div class="container-search-header">
				<button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
					<img src="images/icons/icon-close2.png" alt="CLOSE">
				</button>

				<form class="wrap-search-header flex-w p-l-15">
					<button class="flex-c-m trans-04">
						<i class="zmdi zmdi-search"></i>
					</button>
					<input class="plh3" type="text" name="search" placeholder="Search...">
				</form>
			</div>
		</div>
	</header>
	<!-- Sidebar -->
	<aside class="wrap-sidebar js-sidebar">
		<div class="s-full js-hide-sidebar"></div>

		<div class="sidebar flex-col-l p-t-22 p-b-25">
			<div class="flex-r w-full p-b-30 p-r-27">
				<div class="fs-35 lh-10 cl2 p-lr-5 pointer hov-cl1 trans-04 js-hide-sidebar">
					<i class="zmdi zmdi-close"></i>
				</div>
			</div>

			<div class="sidebar-content flex-w w-full p-lr-65 js-pscroll">
				<ul class="sidebar-link w-full">
					<li class="p-b-13">
					
						<a href="{{path('main')}}" class="stext-102 cl2 hov-cl1 trans-04">
							<i class="fa-solid fa-house"></i> Home
						</a>
					</li>

					<li class="p-b-13">
						<a href="{{path('about')}}" class="stext-102 cl2 hov-cl1 trans-04">
							<i class="fa-solid fa-list"></i> About
						</a>
					</li>

					<li class="p-b-13">
						<a href="{{path('books')}}" class="stext-102 cl2 hov-cl1 trans-04">
						    <i class="fa-solid fa-book"></i>  Books
						</a>
					</li>
					<li class="p-b-13">
						<a href="{{path('order')}}" class="stext-102 cl2 hov-cl1 trans-04">
						  <i class="fa-solid fa-bag-shopping"></i>  Orders
						</a>
					</li>

					<li class="p-b-13">
						<a href="{{path('contact')}}" class="stext-102 cl2 hov-cl1 trans-04">
						<i class="fa-solid fa-address-book"></i> Contact
						</a>
					</li>

					<li class="p-b-13">
						<a href="{{path('app_login')}}" class="stext-102 cl2 hov-cl1 trans-04">
							<i class="fa-solid fa-right-to-bracket"></i> Login
						</a>
					</li>

					<li class="p-b-13">
						<a href="{{path('register_client')}}" class="stext-102 cl2 hov-cl1 trans-04">
							<i class="fa-solid fa-right-to-bracket"></i> Register
						</a>
					</li>
				</ul>
			</div>
		</div>
	</aside>
	
	<script src="https://kit.fontawesome.com/ce3d4c5710.js" crossorigin="anonymous"></script>
{% endblock %}
